#include <stdio.h>
#include <stdlib.h>
#include <time.h>

#define MAX_CHARACTERS 3
#define MAX_PLACES 3
#define MAX_OBJECTS 3

void generateStory(char characters[][20], char places[][20], char objects[][20]) {
    int charIndex = rand() % MAX_CHARACTERS;
    int placeIndex = rand() % MAX_PLACES;
    int objectIndex = rand() % MAX_OBJECTS;

    printf("\nUne histoire amusante:\n");
    printf("Un jour, %s se promenait à %s.\n", characters[charIndex], places[placeIndex]);
    printf("Tout à coup, ils ont trouvé un %s.\n", objects[objectIndex]);
    printf("Ils ont décidé de l'utiliser pour faire un tour incroyable !\n");
    printf("Et c'est ainsi que %s est devenu un héros légendaire !\n", characters[charIndex]);
}

int main() {
    char characters[MAX_CHARACTERS][20];
    char places[MAX_PLACES][20];
    char objects[MAX_OBJECTS][20];

    srand(time(NULL)); // Initialiser le générateur de nombres aléatoires

    // Saisie des personnages
    printf("Entrez 3 noms de personnages:\n");
    for (int i = 0; i < MAX_CHARACTERS; i++) {
        printf("Personnage %d: ", i + 1);
        scanf("%s", characters[i]);
    }

    // Saisie des lieux
    printf("\nEntrez 3 lieux:\n");
    for (int i = 0; i < MAX_PLACES; i++) {
        printf("Lieu %d: ", i + 1);
        scanf("%s", places[i]);
    }

    // Saisie des objets
    printf("\nEntrez 3 objets:\n");
    for (int i = 0; i < MAX_OBJECTS; i++) {
        printf("Objet %d: ", i + 1);
        scanf("%s", objects[i]);
    }

    / Générer l histoire
    generateStory(characters, places, objects);

    return 0;
}
